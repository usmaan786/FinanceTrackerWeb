@page
@model FinanceTrackerWeb.Pages.BudgetModel
@{
    ViewData["Title"] = "Budget";
}

<div class="p-5 mb-4 bg-light rounded-3 text-center">
    <h2 class="display-4">Current Budget: £@Model.Budget</h2>
</div>

<div class="container mt-5">
    <h2 class="mb-4">Update Your Budget</h2>
    <form method="post" class="form-inline">
        <div class="form-group mb-3">
            <label asp-for="Budget" class="form-label me-2">New Budget (£):</label>
            <input asp-for="Budget" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary ms-3">Update Budget</button>
    </form>
</div>

@section Scripts{
    <partial name ="_ValidationScriptsPartial"/>
}